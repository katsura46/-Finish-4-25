<% if flash[:notice] %>
     <p id="notice">
       <%= flash[:notice] %>
     </p>
<% end %>
<% if @newbook.errors.any? %>
      <div id="error_explanation">
        <h2><%= @newbook.errors.count %> errors prohibited this obj from being saved:</h2>
        <ul>
          <% @newbook.errors.full_messages.each do |message| %>
          <li><%= message %></li>
          <% end %>
        </ul>
      </div>
<% end %>
<%= render 'lists', user: @user, book: @newbook %>

    <div class= "col-md-8 offset-md-1">
      <h2>Books</h2>
      <table class="table table-hover table-inverse">
          <thead>
             <tr>
               <th></th>
               <th>Title</th>
               <th>opinion</th>
               <th colspan="3"></th>
             </tr>
          </thead>
          <% @books.each do |book| %>
          <tbody>
             <tr>
               <td><%= link_to  user_path(book.id) do %>
                   <%= image_tag book.user.get_profile_image(100,100) %>
                </td>
                <% end %>
               <td><%= link_to book.title, book_path(book.id) %></td>
               <td><%= book.body %></td>
             </tr>
          </tbody>
          <% end %>
      </table>
    </div>
